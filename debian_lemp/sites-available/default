server {
	listen 80 default_server;
	listen [::]:80 default_server;
    server_name _;

    root /var/www/html;
    index index.php index.html;
    
    # Max upload size
    client_max_body_size 10M;

    # REDIRECT IF NOT EXISTS
    location / {
		# First attempt to serve request as file, then as directory, then fall back to displaying a 404.
		# try_files $uri $uri/ =404;

		# Router rewrite all to index.php if file or dir not exist
		# try_files $uri $uri/ /index.php$is_args$args;

        # Rewrite to missing location if file or dir not exist
        try_files = $uri $uri/ @missing;
	}
    
    # PHP FPM
	location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        include fastcgi_params;
        fastcgi_param HTTP_PROXY "";

        # Unix socket
        fastcgi_pass unix:/run/php/php7.3-fpm.sock;

        # Tcp sockets
        # fastcgi_pass 127.0.0.1:9000;
    }
    
    # PRIVATE
    location /private/ {
        internal;
        allow 127.0.0.1;
        deny all;
    }
    
    # STATIC CONTENT
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|webp|pdf|svg|woff|woff2|ttf|xml)$ {
        # access_log        off;
        # log_not_found     off;
        # expires 7d;
    }

    # HTACCESS
    location ~ /\.ht {
        access_log off;
        log_not_found off;
        deny all;
    }

    # REDIRECT ALL
    location @missing {
        rewrite ^ $scheme://$host/index.php$is_args$args; permanent;
    }

    # BASIC AUTH
    location = /admin.php {
        auth_basic "Restricted";
        auth_basic_user_file conf.d/.htpasswd;
        include snippets/fastcgi-php.conf;
        include fastcgi_params;
        fastcgi_pass unix:/run/php/php7.3-fpm.sock;
    }
}

server {
    listen 443 ssl http2;
    server_name  _;
    root /var/www/html;
    index index.php index.html;

    access_log   /var/log/nginx/domain.xx.log;
    error_log    /var/log/nginx/domain.xx.log error;
    
    ssl on;
    ssl_certificate_key /etc/nginx/ssl/domain.xx.key;
    ssl_certificate     /etc/nginx/ssl/domain.xx.pem;
    
    # Self-signed certs
    # include snippets/snakeoil.conf

    # location = / {
        # proxy_pass http://upstream;
        # http2_push_preload on;
        # keepalive_timeout 70;

        # proxy_pass http://localhost:8000;
        # proxy_set_header Host $host;
        # proxy_set_header X-Real-IP $remote_addr;
    # }
}
